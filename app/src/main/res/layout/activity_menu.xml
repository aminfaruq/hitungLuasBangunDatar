<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:text="Silahkan pilih bangun datar :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="luasPersegi"
        android:textColor="#ffff"
        android:background="@color/colorButton"
        android:text="PERSEGI"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/colorButton"
        android:textColor="#ffff"
        android:text="PERSEGI PANJANG"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="250dp"
        android:onClick="LuasPersegiPanjang"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="LuasLingkaran"
        android:textColor="#ffff"
        android:background="@color/colorButton"
        android:text="LINGKARAN"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="LuasSegitiga"
        android:textColor="#ffff"
        android:background="@color/colorButton"
        android:text="SEGITIGA"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />



</LinearLayout>